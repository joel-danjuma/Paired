generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id          String      @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    email       String      @unique(map: "email_1")
    password    String
    image       String?
    created_at  DateTime    @default(now())
    updated_at  DateTime    @updatedAt
    room_ads    RoomAd[]    @relation("userToRoomAds")
    roommate_ad RoommateAd? @relation("userToRoommateAd")

    @@map("users")
}

model RoomAd {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    title         String
    description   String
    propertyType  String
    rent          Int
    bedrooms      Int
    bathrooms     Int
    location      String
    pets          Boolean
    smoking       Boolean
    serviced      Boolean
    serviceCharge Int
    created_by    User     @relation("userToRoomAds", fields: [user_id], references: [id], onDelete: Cascade)
    user_id       String   @unique @db.ObjectId
    created_at    DateTime @default(now())
    updated_at    DateTime @updatedAt

    @@map("rooms")
}

model RoommateAd {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    age         Int
    occupation  String
    budget      Int
    gender      String
    pets        Boolean
    smoking     Boolean
    created_by  User     @relation("userToRoommateAd", fields: [user_id], references: [id], onDelete: Cascade)
    user_id     String   @unique @db.ObjectId
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt

    @@map("roommates")
}
